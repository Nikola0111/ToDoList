<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center">

    <EditText
        android:id="@+id/todoPlainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Add Todo" />

    <RadioGroup
        android:id="@+id/priority_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/todoPlainText">

        <RadioButton
            android:id="@+id/low_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Nizak" />

        <RadioButton
            android:id="@+id/medium_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Srednji"/>

        <RadioButton
            android:id="@+id/urgent_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hitno"/>
    </RadioGroup>

</RelativeLayout>